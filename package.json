{
	"name": "vscode-separators",
	"displayName": "vscode-separators",
	"description": "Separators",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
            "type": "object",
            "title": "%separators.configuration.title%",
            "properties": {
                "separators.methods.borderWidth": {
                    "type": "integer",
                    "default": 1,
                    "description": "%separators.methods.borderWidth.description%"
				},
                "separators.methods.borderStyle": {
                    "type": "string",
                    "default": "solid",
                    "enum": [
						"solid",
						"dotted",
						"dashed",
						"double"
                    ],
                    "enumDescriptions": [
                        "Specifies a solid border",
                        "Specifies a dotted border",
						"Specifies a dashed border",
						"Specifies a double bordere"
                    ],
                    "description": "%separators.methods.borderStyle.description%"
				}
			}
		},
		"colors": [
            {
                "id": "separators.methods.borderColor",
                "description": "%separators.methods.borderColor.description%",
                "defaults": {
                    "dark": "#65EAB9",
                    "light": "#65EAB9",
                    "highContrast": "#65EAB9"
                }
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
